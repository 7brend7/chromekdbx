{
    "manifest_version": 2,
    "name": "Chrome kdbx",
    "version": "0.0.1",
    "default_locale": "en",
    "description": "A plain text description",
    "icons": {
        "16": "static/icons/keepass_16x16.png",
        "32": "static/icons/keepass_32x32.png",
        "48": "static/icons/keepass_48x48.png",
        "64": "static/icons/keepass_64x64.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "static/icons/keepass_16x16.png",
            "32": "static/icons/keepass_32x32.png"
        }
    },
    "author": "Borys Anikiyenko <7brend7@gmail.com>",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "background": {
        "scripts": [
            "static/js/background.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "static/js/content-script.js"
            ],
            "all_frames": true,
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        "static/icons/*.png",
        "static/img/*"
    ],
    "permissions": [
        "tabs",
        "webRequest",
        "*://*/*"
    ]
}